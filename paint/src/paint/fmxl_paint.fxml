<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" styleClass="root" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="paint.FXMLPaintController">

    <top>
        <HBox alignment="CENTER" prefHeight="6.0" prefWidth="200.0" spacing="2.0">
            <children>
                <MenuBar id="menuBar" focusTraversable="true">
                    <menus>
                        <Menu text="File">
                            <items>
                                <MenuItem onAction="#openNewFile" text="Open" />
                                <MenuItem onAction="#handleSave" text="Save" />
                                <MenuItem onAction="#handleSaveAs" text="Save As" />
                                <SeparatorMenuItem />
                                <MenuItem onAction="#exitApplication" text="Exit" />
                            </items>
                        </Menu>
                        <Menu text="Edit">
                            <items>
                            </items>
                        </Menu>
                        <Menu text="View">
                            <items>
                            </items>
                        </Menu>
                        <Menu text="Help">
                            <items>
                                <MenuItem disable="true" text="Search" />
                                <SeparatorMenuItem />
                                <MenuItem onAction="#handleAbout" text="About" />
                                <MenuItem onAction="#handleReleaseNotes" text="Release Notes" />
                            </items>
                        </Menu>
                    </menus> 
                </MenuBar>
            <Pane HBox.hgrow="ALWAYS" />
            <Label text="Line Width" />
            <HBox alignment="CENTER" prefHeight="6.0" prefWidth="200.0" spacing="2.0">
                <Slider fx:id="slider" max="50" min="1" />
                <TextField fx:id="sliderText" prefHeight="50" prefWidth="50" /> 
            </HBox>
            <ColorPicker id="colorPicker" fx:id="colorPicker" >
                <value>
                    <Color red="0.0" blue="0.0" green="0.0"/>
                </value>
            </ColorPicker>

            <Pane HBox.hgrow="ALWAYS" />
            <Button id="closeButton" mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="11.0" prefWidth="27.0" text="X" />
            </children>
        </HBox>
    </top>
    <left>
        <VBox id="toolBox" fx:id="toolBox" alignment="CENTER" spacing="10.0">
            
            <fx:define>
                <ToggleGroup fx:id="toolGroup" />
            </fx:define>
            
            <ToggleButton fx:id="drawButton" prefWidth="55.0" text="Draw" toggleGroup = "$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="lineButton" prefWidth="55.0" text="Line" toggleGroup="$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="fillButton" prefWidth="55.0" text="Fill" toggleGroup="$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="eraseButton" prefWidth="55.0" text="Erase" toggleGroup="$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="rectButton" prefWidth="55.0" text="Rect." toggleGroup="$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="ovalButton" prefWidth="55.0" text="Oval" toggleGroup="$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="textButton" prefWidth="55.0" text="Text" toggleGroup="$toolGroup">
            </ToggleButton>
            <ToggleButton fx:id="zoomButton" prefWidth="55.0" text="Zoom" toggleGroup="$toolGroup">
            </ToggleButton>
            
        </VBox>
    </left>
    <center>
    <StackPane id="stackPane" fx:id="stackPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
        <children>
            
            <Canvas id="imageCanvas" fx:id="imageCanvas" onMouseDragged="#setOnMouseDragged" onMousePressed="#setOnMousePressed" onMouseReleased="#setOnMouseReleased">
           </Canvas>
            
        </children>
    </StackPane>
   </center>
  

    <stylesheets>
        <URL value="@paint.css" />
    </stylesheets> 
</BorderPane>
