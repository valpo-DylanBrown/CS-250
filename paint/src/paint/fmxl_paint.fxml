                        <menus>
                            <Menu text="File">
                                <items>
                                    <MenuItem onAction="#openNewFile" text="Open" />
                                    <MenuItem onAction="#handleSave" text="Save" />
                                    <MenuItem onAction="#handleSaveAs" text="Save As" />
                                    <SeparatorMenuItem />
                                    <MenuItem onAction="#exitApplication" text="Exit" />
                                </items>
                            </Menu>
                            <Menu text="Help">
                                <items>
                                    <MenuItem disable="true" text="Search" />
                                    <SeparatorMenuItem />
